    ViewBag.Title = "Login Page ";
}

@section head
{

}

@section body
{

    <div style="margin-top:10px">
        <div style="margin: auto; position: absolute;left: 0; right: 0; top: 0px;width:350px;height:360px;border:5px solid; margin-top:150px; border-color:rgba(25, 66, 132, 0.52);border-radius:10px;  ">
            <div>
            <!--<div style="margin: auto; position: absolute;left: 0; right: 0; top: 0px;border:5px solid;margin-top:10px">-->
                <img style="width:150px;display: block;margin:0 auto;margin-top:20px" src="https://dr.tvbs.com.tw/images/f-hos-logo.png">
            </div>
            <div style="margin: auto; position: absolute;left: 70px; right: 70px; top: 0px;;margin-top:180px;">
                <!--<label for="username">Username:</label><br>-->
                <input style="height:30px;width:200px;" placeholder="ID" type="text" id="username" />
            </div>
            <div style="margin: auto; position: absolute;left: 70px; right: 70px; top: 0px;margin-top:240px">
                <!--<label for="password">Password:</label><br>-->
                <input style="height:30px;width:200px;" placeholder="PASSWORD" type="password" id="password" />
            </div>
            <div style="margin: auto; position: absolute;left: 70px; right: 70px; top: 0px;margin-top:300px">
                <input type="button" id="login" value="Login" class="btn" data-role="button" style="background-color:#CCDDFF;color:#194284;height:30px;width:200px;text-align:center;" />
            </div>
        </div>
    </div>
}

@section featured {

}

<script>
    //按下登入按鈕取得帳號密碼
    $("#login").click(function (e) {
        var login_data = {
            "Username": $("#username").val(),
            "Password": $("#password").val(),
        }
        $.ajax({
            type: "POST",
            url: "UserLogin",
            data: login_data,
            dataType: "json",
            success: function (response) {
                if (response == true) {
                    alert("登入成功");
                    window.location.href = "Search"
                }
                else {
                    alert("登入失敗");
                    $("#username").val("");
                    $("#password").val("");
                }
            },
            error: function (error) {
                alert("請重新整理頁面");
            }
        });

    })
</script>